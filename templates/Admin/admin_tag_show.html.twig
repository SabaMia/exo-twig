{% extends 'admin/admin_base.html.twig' %}

{% block metaTitle %}
    Tag: {{ tag.title }}
{% endblock %}

{% block main %}
        <main>
            <div class="center lHeight200">
                <h1 style="color:{{ tag.color }};">{{ tag.title }}</h1>
                {% for article in tag.articles %}
                    <a href={{ path('admin_article_show',{'id':article.id })}}><h1>{{ article.title }}</h1></a>
                    <p>{{ article.title }}</p>
                {% endfor %}
            </div>
            <a href="{{ path('admin_tags_list') }}"> Voir tous les tags</a>
        </main>
{% endblock %}



