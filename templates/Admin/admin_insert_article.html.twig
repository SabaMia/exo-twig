<div class="form-group">
    {{ form_errors(articleForm.title) }}
    {{ form_label(articleForm.title, 'Titre', {'label_attr': {'class': 'form_article_title_label'}}) }}
    {{ form_widget(articleForm.title, {'attr': {'class': 'form_article_title-input'}}) }}
</div>

<div class="form-group">
    {{ form_label(articleForm.content, 'Contenu', {'label_attr': {'class': 'form_article_content_label'}}) }}
    {{ form_widget(articleForm.content, {'attr': {'class': 'form-article-content-input mb-15', 'placeholder': 'Remplissez le contenu'}}) }}
</div>

<div>
    {{ form_row(articleForm.imageFile) }}
</div>

<div class="form-group">
    {{ form_widget(articleForm.creationDate, {'attr': {'class': 'mb-15'}}) }}
</div>

    <div class="form-group ">
        {{ form_label(articleForm.isPublished, 'Publié') }}
        {{ form_widget(articleForm.isPublished, {'attr': {'class': 'ml-10'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(articleForm.category, 'Catégorie', {'attr': {'class': 'form_article_category_label'}}) }}
        {{ form_widget(articleForm.category) }}
    </div>

    <div class="form-group">
        {{ form_label(articleForm.tag, 'Tag', {'attr': {'class': 'form_article_tag_label'}}) }}
        {{ form_widget(articleForm.tag) }}
    </div>


    <div class="form-group">
        {{ form_widget(articleForm.submit, {'attr': {'class': 'btn-submit', }, 'label': 'Ajouter'}) }}
    </div>

    {#    équivalent de la balise de fermeture du form#}
    {{ form_end(articleForm) }}



{% endblock %}

