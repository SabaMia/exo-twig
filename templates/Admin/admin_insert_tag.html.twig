{% extends 'Admin/admin_base.html.twig' %}

{% block metaTitle %}Cr√©ation de tag{% endblock %}


{% block main %}

    <h1 class="h1-ajout">Ajouter un tag</h1>

    {{ form_start(tagForm) }}

    <div class="form-group">
        {{ form_errors(tagForm.title) }}
        {{ form_label(tagForm.title, 'Titre', {'label_attr': {'class': 'form_tag_title_label'}}) }}
        {{ form_widget(tagForm.title, {'attr': {'class': 'form_tag_title-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(tagForm.color, 'Description', {'label_attr': {'class': 'form_tag_content_label'}}) }}
        {{ form_widget(tagForm.color, {'attr': {'class': 'form-tag-content-input mb-15', 'placeholder': 'Remplissez la couleur'}}) }}
    </div>

    <div class="form-group">
        {{ form_widget(tagForm.submit, {'attr': {'class': 'btn-submit', }, 'label': 'Ajouter'}) }}
    </div>



    {{ form_end(tagForm) }}

{% endblock %}

