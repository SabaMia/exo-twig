{# Création du dossier BASE qui va servir de layout à toutes les pages #}
<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
        <link rel="stylesheet" href={{ asset('style.css') }}>
        {# On créé des blocks à chaque fois qu'on veut insérer du contenu personnalisé selon l'article
        puis on met un endblock pour fermer le block #}
        <title>Interface Admin</title>
    </head>
    <body>
        <header>
            <nav>
                <div class="logo">
                    <img src="{{ asset('media/logo.png') }}" alt="logo" class="resp">
                </div>
                {# insertion d'un formulaire avec une méthode get afin de récupérer le mot tapé dans la recherche #}
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
                <div >
                    {#<a href={{ path('admin_article_list',)}}><img src={{ asset('media/menu.png') }} alt="menu" class="resp"></a>#}
                    <a class="" href="{{ path('admin_article_list') }}">Gestion des articles</a>
                    <a class="" href="{{ path('admin_category_list') }}">Gestion des catégories</a>
                    <a class="" href="{{ path('admin_tags_list') }}">Gestion des tags</a>
                </div>
            </nav>
            {#        Créer un message flash pour annoncer le succès ou les erreurs du crud#}
            <div>
                {% for message in app.flashes('success') %}
                    <div class="flash-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>


        </header>
        {% block main %}
        {# le contenu des articles contenu dans leurs balises main s'affichera ici #}
        {% endblock main %}
        <footer>
        </footer>
    </body>
</html>